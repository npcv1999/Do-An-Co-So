<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr_nv"
    tools:context=".MainNvActivity">

    <Button
        android:id="@+id/btnCacCV"
        android:layout_width="246dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/button_selector_login_regist"
        android:text="@string/c_c_cv_ng_k_ph_ng_v_n"
        android:textColor="#FAF6F6"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnQLTKNV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDangViec" />

    <Button
        android:id="@+id/btnQLTKNV"
        android:layout_width="246dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/button_selector_login_regist"
        android:text="@string/qu_n_l_t_i_kho_n"
        android:textColor="#F8F5F5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCacCV" />

    <Button
        android:id="@+id/btnDangViec"
        android:layout_width="246dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/button_selector_login_regist"
        android:text="@string/ng_vi_c_l_m_m_i"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCacCV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQTV" />

    <TextView
        android:id="@+id/txtQTV"
        android:layout_width="359dp"
        android:layout_height="84dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:shadowColor="#951E1E"

        android:text="Xin chào nhân viên: Nguyễn Phạm Chí Vinh "
        android:textAlignment="center"
        android:textColor="#E61D1D"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDangViec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>